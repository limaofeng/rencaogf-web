<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>室内装修网-案例详细</title>
    <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=0"/>
    <meta name="keywords" content="关键词，tapas"/>
    <meta name="description" content="摘要，tapas"/>
    <script src="/js/jquery-1.8.3.min.js"></script>
    <script type="text/javascript" src="/js/jquery.SuperSlide.2.1.1.js"></script>
    <link href="/css/css.css" type="text/css" rel="stylesheet">
    <link href="/css/keyframes.css" type="text/css" rel="stylesheet">
    <link href="/css/prettyPhoto.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="/js/jquery.prettyPhoto.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $(".prev,.next").hover(function(){
                $(this).stop(true,false).fadeTo("show",0.9);
            },function(){
                $(this).stop(true,false).fadeTo("show",0.4);
            });
            $(".banner-box").slide({
                titCell:".hd ul",
                mainCell:".bd ul",
                effect:"fold",
                interTime:3500,
                delayTime:500,
                autoPlay:true,
                autoPage:true,
                trigger:"click"
            });
            $(".btn_top").click(function(){
                $("html,body").animate({scrollTop:'0'},400);
                return false;
            });
            $(".coll_detail_pic").hover(function(){
                $(this).find(".bg_big").show();
            },function(){
                $(this).find(".bg_big").hide();
            });
            $("a[rel^='prettyPhoto']").prettyPhoto({
                animationSpeed:'fast',
                slideshow:5000,
                theme:'facebook',
                show_title:false,
                overlay_gallery: false
            });
    });
    </script>
</head>
    <body>
        {{>header}}

        <div class="crumbs">
            <ul class="ie_maiDiv crumbs_list">
                <li>
                    <i class="icon-home"></i>
                    首页
                </li>
                <li>
                    <i class="icon-arrow-left"></i>
                    <i class="icon-camera_fill"></i>
                    案例展示
                </li>
                <li>
                    <i class="icon-arrow-left"></i>
                    <i class="icon-pic"></i>
                    {{case.title}}
                </li>
            </ul>
            <div class="clear"> </div>
        </div>
        <!--面包屑-->

        <div class="mai_content">
                <div class="ie_maiDiv">
                    <h2 class="coll_detail_title">
                        {{case.title}}
                    </h2>
                    <div>
                        <div class="coll_detail_pic">
                            {{#case.images}}
                                <a href="http://115.29.185.235:8080{{#imagePath}}1000x660{{/imagePath}}" title="{{fileName}}" rel="prettyPhoto[gallery]">
                                    {{#isFristImage}}
                                    <img src="http://115.29.185.235:8080{{#imagePath}}505x404{{/imagePath}}" width="505" height="404" />
                                    <div class="bg_big">
                                        <i class="icon-big"> </i>
                                    </div>
                                    {{/isFristImage}}
                                </a>
                            {{/case.images}}
                        </div>
                        <div class="coll_detail_pic_txt">
                            <h2 class="coll_detail_title">
                                设计说明
                            </h2>
                            <p>
                                {{{case.content}}}
                            </p>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div>
                        <h2 class="coll_detail_title">
                            案例信息
                        </h2>
                        <div>
                            <ul class="coll_table clearBoth">
                                <li>
                                    <span class="w30">名称</span>
                                    <span class="w69">{{{case.title}}}</span>
                                </li>
                                <li>
                                    <span class="w30">面积</span>
                                    <span class="w69">{{{case.square}}}</span>
                                </li>
                                <li>
                                    <span class="w30">设计风格</span>
                                    <span class="w69">{{case.style}}</span>
                                </li>
                                <li>
                                    <span class="w30">设计师</span>
                                    <span class="w69">{{case.designer}}</span>
                                </li>
                                <li>
                                    <span class="w30">&nbsp;</span>
                                    <span class="w69">&nbsp;</span>
                                </li>
                                <li>
                                    <span class="w30">&nbsp;</span>
                                    <span class="w69">&nbsp;</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        {{>footer}}
    </body>
</html>