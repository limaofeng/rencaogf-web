<div class="page">
    {{#pager.template}}
        <a class="arrow_1" href="{{pageFirstUrl}}">&nbsp</a>
        <a class="arrow_2" href="{{pagePrevUrl}}">&nbsp</a>
        <span><i style="color: red">{{currentPage}}</i>/{{totalPage}}</span>
        <a class="arrow_2 arrow_3" href="{{pageNextUrl}}">&nbsp</a>
        <a class="arrow_1 arrow_3" href="{{pageLastUrl}}">&nbsp</a>
    {{/pager.template}}
</div>
<div class="clearBoth"> </div>